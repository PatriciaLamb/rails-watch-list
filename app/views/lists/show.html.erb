<h2><%= @list.name %></h2>


<% @list.movies.each do |movie| %>
  <p><%=movie.title %></p>
    <% @list.bookmarks.each do |bookmark| %>
      <p><%= bookmark.comment %></p>
      <%= link_to "Destroy this bookmark",
      bookmark_path(bookmark),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    <% end %>
<% end %>
